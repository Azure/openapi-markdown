{
  "name": "@azure/openapi-markdown",
  "version": "0.9.3",
  "description": "Azure OpenAPI MarkDown",
  "scripts": {
    "tsc": "tsc",
    "test": "jest",
    "test:watch": "jest --watch --coverage false",
    "test:e2e": "jest --files *.e2e.ts",
    "prepack": "npm install && tsc"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.js.map",
    "dist/*.d.ts",
    "dist/*.d.ts.map",
    "src/*.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/openapi-markdown.git"
  },
  "keywords": [
    "azure",
    "openapi",
    "markdown"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Azure/openapi-markdown/issues"
  },
  "homepage": "https://github.com/Azure/openapi-markdown#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/commonmark": "^0.27.3",
    "@types/jest": "^24.0.12",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^10.12.18",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.3"
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "cobertura"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {},
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "cobertura",
      "text",
      "html",
      "clover"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".*/test/.*"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*Test.ts"
    ],
    "verbose": true,
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": ".",
    "output": "test-results.xml"
  },
  "dependencies": {
    "@ts-common/commonmark-to-markdown": "^2.0.2",
    "@ts-common/iterator": "^0.3.1",
    "@ts-common/string-map": "^0.3.0",
    "@ts-common/virtual-fs": "^0.3.0",
    "commonmark": "^0.28.1",
    "js-yaml": "^3.13.1",
    "tslib": "^1.9.3"
  }
}
